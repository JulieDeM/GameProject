html
	head
		title Dashboard
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
		meta(charset='UTF-8')
	body.dash
		h3 #{userInfo.userName}
		h5 #{userInfo.firstName} #{userInfo.lastName}
		br
		for game in gameTypes
			h3 #{game.type} 
				if game.game_id === faveGame
					img.heart(src='https://firebasestorage.googleapis.com/v0/b/test-project-2e540.appspot.com/o/heart_white_full.png?alt=media&token=6ea51204-b6ea-4323-844e-45c980af1af5')
				else if game.game_id !== faveGame && currUserID === userInfo.fb_uid
					form(action='/#{userInfo.id}/#{game.game_id}', method='post')
						input.heart(type="image" name="favorite" src="https://firebasestorage.googleapis.com/v0/b/test-project-2e540.appspot.com/o/heart_white_outline.png?alt=media&token=61ae60e3-279c-40ae-b357-6a6975bf02a6")
			for stats in gameStats
				if stats.user_game_id === game.usergamesid
					p Rating: #{stats.rating}
			p(style={color: 'blue'}) Add a Game Record
			form(action="/addrecord", method="post")
				input(type="text", name="game_id", style={display: 'none'}, value= "#{game.game_id}")
				input(type="text", name="user1_id", style={display: 'none'}, value= "#{userInfo.id}")
				input(type="text", name="user2_id", placeholder="opponent")
				input(type="number", name="user1_score", placeholder="your score")
				input(type="number", name="user2_score", placeholder="opponent's score")
				input(type="submit")
			for records in gameRecords
				if records.game_id === game.game_id
					if records.user1_id === userInfo.id && userInfo.userName !== records.userName
						p
							b #{userInfo.userName}
							|  #{records.user1_score} - #{records.user2_score} 
							b #{records.userName} 
							if currUserID === userInfo.fb_uid
								a.btn.btn-danger(href='/gameRecord/#{records.record_id}/edit') Update Record 
								if records.user2_alert === true
									a.btn.btn-primary(href='/request/#{records.record_id}/edit') !!!
					else if userInfo.userName !== records.userName
						p
							b #{records.userName}
							|  #{records.user1_score} - #{records.user2_score} 
							b #{userInfo.userName} 
							if currUserID === userInfo.fb_uid
								a.btn.btn-danger(href='/gameRecord/#{userInfo.record_id}/edit') Update Record 
								if records.user2_alert === true 
									a.btn.btn-primary(href='/request/#{records.record_id}/edit') !!!
			br
			br
	small Heart by Kid A from the Noun Project
